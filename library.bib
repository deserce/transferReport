file = {:Users/matt/references/Yao et al. - 2018 - SI for Interplay of cation and anion redox in Li4Mn2O5 cathode material and prediction of improved Li4 (Mn,M) 2O5 el.pdf:pdf},
issn = {23752548},
journal = {Science Advances},
number = {5},
pages = {1--6},
title = {{SI for Interplay of cation and anion redox in Li4Mn2O5 cathode material and prediction of improved Li4 (Mn,M) 2O5 electrodes for Li-ion batteries}},
volume = {4},
year = {2018}
}
@article{Phillips2015,
