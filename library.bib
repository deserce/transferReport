issn = {09270256},
journal = {Computational Materials Science},
keywords = {Cathode materials,Cluster expansion,Crystal structure prediction,First principles,Ground state,Li-ion battery,Polymorph},
number = {December 2018},
pages = {454--459},
publisher = {Elsevier},
title = {{Discovery of new ground state structures for Li4Mn2O5 and V2O5 from first principles}},
url = {https://doi.org/10.1016/j.commatsci.2018.12.040},
